<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TaskDetailActivity">

    <TextView
        android:id="@+id/selectedDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="12月22日"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selectedYearTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="2021"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/selectedDateTv"
        app:layout_constraintTop_toTopOf="@id/selectedDateTv" />

    <TextView
        android:id="@+id/selectedLunarTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="除夕"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/selectedYearTv"
        app:layout_constraintStart_toStartOf="@id/selectedYearTv"
        app:layout_constraintTop_toBottomOf="@id/selectedYearTv" />

    <TextView
        android:id="@+id/calendarSelectedDayTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/vector_drawable_calendar"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="23"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.haibin.calendarview.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:current_day_text_color="@color/wood1"
        app:layout_constraintTop_toBottomOf="@id/selectedYearTv"
        app:month_view="com.day.record.ui.ProgressMonthView"
        app:scheme_text_color="@color/purple_200"
        app:week_view="com.day.record.ui.ProgressWeekView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/taskRcy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendarView" />

</androidx.constraintlayout.widget.ConstraintLayout>