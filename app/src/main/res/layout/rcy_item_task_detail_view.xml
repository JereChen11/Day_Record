<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/isCheckedIconIv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/vector_drawable_checked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/taskTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="remember "
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/isCheckedIconIv"
        app:layout_constraintStart_toEndOf="@id/isCheckedIconIv"
        app:layout_constraintTop_toTopOf="@id/isCheckedIconIv" />


</androidx.constraintlayout.widget.ConstraintLayout>